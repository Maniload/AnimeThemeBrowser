<div class="my-4">
    <div class="row">
        <div class="col-12 col-md-9 mr-auto border-right border-light px-0">
            <div class="container border-bottom border-light mb-3">
                <h1>{{title}}</h1>
                {{#if aliases}}
                    <ul class="d-none d-md-block">
                        {{#each aliases}}
                            <li><h4 class="text-muted">{{this}}</h4></li>
                        {{/each}}
                    </ul>
                {{/if}}
            </div>
            <div class="container mt-3">
                <h3>Themes ({{themes.length}}):</h3>
                <div class="list-group">
                    {{#each themes}}
                        {{> _themeListItemSmall}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="row justify-content-center">
                <img src="{{image}}" class="img-fluid rounded mb-3">
            </div>
            <dl class="row">
                <dt class="col-sm-5">Season</dt>
                <dd class="col-sm-7 text-muted">{{season.string}}</dd>
                <dt class="col-sm-5">More Info</dt>
                <dd class="col-sm-7"><a href="https://myanimelist.net/anime/{{id}}">MyAnimeList</a></dd>
            </dl>
        </div>
    </div>
</div>