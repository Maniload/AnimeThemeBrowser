<a class="list-group-item text-truncate py-3{{#if active}} active{{else}} list-group-item-action{{/if}}"{{#unless active}} href="/watch/{{id}}"{{/unless}}>
    <span class="badge badge-secondary mr-1">{{typeString}}</span>
    <span class="mr-1">{{title}}</span>
    {{#if series}}
        <span class="text-muted">{{series.title}}</span>
    {{/if}}
</a>